<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4sp"
    android:background="@drawable/user_item_bg"
    android:orientation="vertical"
    android:padding="4sp"
    tools:context=".Admin_ProcessOrders">

    <TextView
        android:id="@+id/textNo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Number 01"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textCategory1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Classic Type"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textCake1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12 Cup Cake Pack "
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4sp"
        android:orientation="horizontal"
        android:padding="4sp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonContinue1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="?android:attr/colorFocusedHighlight"
            android:text="CONTINUE"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonContinue2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:text="VIEW ORDER"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textNo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Number 02"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textCategory2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Themed Type"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textCake2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12 Cup Cake Pack "
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4sp"
        android:orientation="horizontal"
        android:padding="4sp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonContinue3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="?android:attr/colorFocusedHighlight"
            android:text="CONTINUE"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonContinue4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@android:color/holo_blue_dark"
            android:text="VIEW ORDER"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>